<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.learnagain.leftzoom.FragmentZoomLeft">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_left"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_activityMain_transactionLeft"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#79CAF6"
        android:text="ZOOM LEFT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_left" />

    <Button
        android:id="@+id/button_activityMain_transactionRight"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#79CAF6"
        android:text="ZOOM RIGHT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_left" />

</androidx.constraintlayout.widget.ConstraintLayout>